---
import { useState } from 'preact/hooks'

let voltData = {}
try {
  const res = await fetch('/api/memory')
  voltData = await res.json()
} catch (err) {
  voltData = { error: 'Failed to load memory.' }
}
---

<html>
  <head>
    <title>Volt Memory Editor</title>
  </head>
  <body>
    <h1>🧠 Volt Memory Editor</h1>

    <form method="POST" action="/api/memory">
      <textarea name="memory" rows="30" cols="80">{JSON.stringify(voltData, null, 2)}</textarea>
      <br />
      <button type="submit">💾 Save Memory</button>
    </form>

    <p><a href="/dashboard">← Back to Dashboard</a></p>
  </body>
</html>
