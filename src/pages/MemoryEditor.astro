---
import fs from 'fs/promises'
import path from 'path'

let memoryPath = path.resolve('./src/data/volt.json')
let voltData = {}

try {
  const file = await fs.readFile(memoryPath, 'utf-8')
  voltData = JSON.parse(file)
} catch (err) {
  voltData = { error: "Could not load memory." }
}
